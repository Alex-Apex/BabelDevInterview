<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{title}}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/javascripts/vendor/htmx.min.js"></script>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <div id="top-bar">
        <!-- Alerts and other top bar content go here -->
        {{{alerts}}}
    </div>
    <div id="container">
        <aside id="sidebar">
            <h2>{{{sidebar}}}</h2>
            {{#each interviewStages}}
                <div class="sideBarMenuItem">
                    {{this.StageName}}
                </div>
            {{/each}}
        </aside>
        <main id="content">
            <!-- Main content goes here -->
            {{{body}}}
            <!-- src/views/yourView.handlebars -->
        </main>
        <form id="ai-interaction-form" action="/interact-with-ai" method="post">
            <div class="txtUserTextbox">
                <textarea id="user-input" name="userInput" placeholder="Type your message here..." required></textarea>
                <button type="submit">Send</button>
            </div>
        </form>
    </div>
    <script src="/javascripts/script.js"></script>
</body>
</html>
